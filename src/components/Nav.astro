---
export interface Props {
	location?: string;
}

const { location } = Astro.props as Props;

const NAVIGATION_LINKS = {
	"/": "Home",
	"/#about": "About",
	"/downloads": "Download",
	"/playground": "Playground",
	"/docs": "Docs"
}
---

<header class="header border-b border-gray-800 sticky top-0 z-30 bg-gray-900">
	<div class="container mx-auto flex flex-col md:flex-row items-center justify-between px-4 py-6">
		<nav>
			<ul class="flex flex-col md:flex-row items-center">
				<li>
					<a href="/" class="flex items-center font-bold text-xl gap-2">
						<span>Lubalia</span>
						{location && <span class="text-orange-500">{location}</span>}
					</a>
				</li>
			</ul>
		</nav>
		<nav>
			<ul class="flex flex-row items-center gap-4 md:gap-8">
				{Object.entries(NAVIGATION_LINKS).map(([path, label]) =>
					<li class="mt-3 md:mt-0 relative">
						<a
							href={path}
							class={
								"after:w-2 after:h-0.5 after:bg-orange-500 after:content-[''] after:absolute after:bottom-1 after:left-0 hover:after:w-full after:transition-all after:duration-200" +
								(label == (location || "Home") ? "text-orange-500 hover:text-orange-600 font-bold" : "hover:text-gray-300")
								}>
								{label}
							</a>
					</li>
				)}
			</ul>
		</nav>
	</div>
</header>
